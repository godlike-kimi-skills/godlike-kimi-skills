{
  "name": "poetry-skill",
  "version": "1.0.0",
  "description": "Poetry依赖管理 - 项目初始化、依赖管理、发布打包",
  "category": "python",
  "author": "godlike-kimi-skills",
  "tags": ["poetry", "dependency-management", "packaging", "pypi", "python"],
  "entry": "main.py",
  "main_function": "main",
  "requirements": [
    "poetry>=1.5.0",
    "toml>=0.10.2",
    "requests>=2.28.0"
  ],
  "python_version": ">=3.8",
  "config_schema": {
    "virtualenvs_create": {
      "type": "boolean",
      "default": true
    },
    "virtualenvs_in_project": {
      "type": "boolean",
      "default": true
    },
    "installer_max_workers": {
      "type": "integer",
      "default": 4
    },
    "pypi_token": {
      "type": "string",
      "default": ""
    }
  }
}
